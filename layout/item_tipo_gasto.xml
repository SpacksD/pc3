<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@drawable/glass_mini_card_background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_category"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_background_professional"
            android:padding="8dp"
            app:tint="@color/glass_expense" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALIMENTOS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/glass_text_on_glass"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium"
                tools:text="ALIMENTOS" />

            <TextView
                android:id="@+id/tv_id_tipo_gasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 1"
                android:textSize="12sp"
                android:textColor="@color/glass_text_on_glass"
                android:alpha="0.7"
                android:fontFamily="sans-serif"
                tools:text="ID: 1" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            app:tint="@color/glass_text_on_glass"
            android:alpha="0.6"
            android:contentDescription="Eliminar tipo de gasto" />

    </LinearLayout>

</androidx.cardview.widget.CardView>